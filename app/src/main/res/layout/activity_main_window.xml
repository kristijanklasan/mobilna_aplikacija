                                android:contentDescription="@null"
                                android:padding="5dp"
                                app:srcCompat="@drawable/ic_chevron_right_black_24dp" />

                        </LinearLayout>

                    </LinearLayout>
                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cardRacunUser"

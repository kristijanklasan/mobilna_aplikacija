<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/pozadina"
    tools:context="android.unipu.theater.fragmenti.administrator.ImageLoaderFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:background="@color/grayReservation" />

            <TextView
                android:id="@+id/textView177"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:text="@string/ucitavanje_slike"
                android:textColor="#ECE3E3"
                android:textSize="18sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="10dp"
                android:background="@color/grayReservation" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView175"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_weight="1"
                    android:paddingLeft="15dp"
                    android:paddingTop="5dp"
                    android:paddingRight="15dp"
                    android:paddingBottom="10dp"
                    android:text="@string/ucitavanje"
                    android:textColor="#959090"
                    android:textSize="16sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="5dp"
                android:backgroundTint="#FFFFFF"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/nazivEdit"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ems="10"
                    android:hint="@string/unos_slike"
                    android:autofillHints="Unos slike"
                    android:inputType="textPersonName"
                    android:textColor="#FFFFFF"
                    android:textColorHint="#FFFFFF"
                    android:textSize="16sp"
                    android:textStyle="italic" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/urlEdit"
                    android:layout_width="0dp"
                    android:layout_height="35dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="5dp"
                    android:layout_weight="0.9"
                    android:background="@drawable/listview_color"
                    android:drawablePadding="20dp"
                    android:hint="@string/url_slike"
                    android:autofillHints="URL slike"
                    android:inputType="textUri"
                    android:paddingStart="15dp"
                    android:paddingEnd="0dp"
                    android:scrollbarAlwaysDrawHorizontalTrack="false"
                    android:selectAllOnFocus="true"
                    android:textColor="#000000"
                    android:textIsSelectable="false"
                    android:textSize="14sp"
                    android:textStyle="italic" />

                <ImageButton
                    android:id="@+id/insertImageButton"
                    android:layout_width="wrap_content"
                    android:layout_height="47dp"
                    android:backgroundTint="#009688"
                    android:contentDescription="@null"
                    android:src="@drawable/ic_edit_black_24dp" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>
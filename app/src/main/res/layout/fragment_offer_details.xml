<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/pozadina"
    tools:context="android.unipu.theater.fragmenti.administrator.OfferDetails">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardBackgroundColor="@color/bluedark"
        app:cardCornerRadius="20dp"
        app:cardElevation="20dp">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fitsSystemWindows="false">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imageView16"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:contentDescription="@null"
                        android:src="@drawable/ic_lens_black_24dp" />

                    <ImageView
                        android:id="@+id/imageView17"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:contentDescription="@null"
                        android:src="@drawable/ic_lens_black_24dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingLeft="10dp"
                    android:paddingTop="20dp"
                    android:paddingRight="10dp">

                    <TextView
                        android:id="@+id/textView76"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/osnovni_podaci"
                        android:textAllCaps="true"
                        android:textColor="#FFFFFF"
                        android:textSize="15sp" />

                    <Switch
                        android:id="@+id/switchReservation"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/ne"
                        android:textColor="#9F9A9A" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="3dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="10dp"
                    android:background="#706B6B"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingLeft="10dp"
                    android:paddingTop="20dp"
                    android:paddingRight="10dp">

                    <TextView
                        android:id="@+id/textView77"
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:paddingStart="10dp"
                        android:paddingEnd="0dp"
                        android:text="@string/kategorija_predstave"
                        android:textColor="#616060"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/kategorijaReservation"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:text="@string/naslov"
                        android:textColor="#FFFFFF"
                        android:textSize="15sp" />

                </LinearLayout>

                <View
                    android:id="@+id/view13"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="10dp"
                    android:background="#706B6B"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingLeft="10dp"
                    android:paddingTop="20dp"
                    android:paddingRight="10dp">

                    <TextView
                        android:id="@+id/textView79"
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:paddingStart="10dp"
                        android:paddingEnd="0dp"
                        android:text="@string/datum_izvedbe"
                        android:textColor="@color/grayReservation"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/datumReservation"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:text="@string/naslov"
                        android:textColor="#FFFFFF"
                        android:textSize="15sp" />

                    <ImageView
                        android:id="@+id/imageDatumReservation"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_weight="0.2"
                        android:contentDescription="@null"
                        android:src="@drawable/ic_date_range_color_24dp"
                        android:visibility="gone" />

                </LinearLayout>

                <View
                    android:id="@+id/view14"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="10dp"
                    android:background="#706B6B"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingLeft="10dp"
                    android:paddingTop="20dp"
                    android:paddingRight="10dp">

                    <TextView
                        android:id="@+id/textView80"
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:paddingStart="10dp"
                        android:paddingEnd="0dp"
                        android:text="@string/vrijeme_pocetka"
                        android:textColor="@color/grayReservation"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/vrijemeReservation"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:text="@string/naslov"
                        android:textColor="#FFFFFF"
                        android:textSize="15sp" />

                    <ImageView
                        android:id="@+id/imageVrijemeReservation"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_weight="0.2"
                        android:contentDescription="@null"
                        android:src="@drawable/ic_access_time_black_24dp"
                        android:visibility="gone" />

                </LinearLayout>

                <TextView
                    android:id="@+id/textZauzetost"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:paddingStart="10dp"
                    android:paddingTop="10dp"
                    android:paddingEnd="20dp"
                    android:text="@string/zauzetost_dvorane"
                    android:textColor="#AF0F0F"
                    android:visibility="gone" />

                <View
                    android:id="@+id/view15"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="10dp"
                    android:background="#706B6B"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingLeft="10dp"
                    android:paddingTop="10dp"
                    android:paddingRight="10dp">

                    <TextView
                        android:id="@+id/textView81"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.4"
                        android:paddingStart="10dp"
                        android:paddingEnd="0dp"
                        android:text="@string/max_ulaznica"
                        android:textColor="@color/grayReservation"
                        android:textSize="14sp" />

                    <EditText
                        android:id="@+id/editMaxUlaznicaReservation"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.6"
                        android:autofillHints="Ulaznice"
                        android:ems="5"
                        android:inputType="numberSigned"
                        android:paddingStart="20dp"
                        android:paddingEnd="0dp"
                        android:textColor="#FFFFFF"
                        android:textSize="15sp" />

                </LinearLayout>

                <View
                    android:id="@+id/view16"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="10dp"
                    android:background="#706B6B"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingLeft="10dp"
                    android:paddingTop="20dp"
                    android:paddingRight="10dp">

                    <TextView
                        android:id="@+id/textView82"
                        android:layout_width="20dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:paddingStart="10dp"
                        android:paddingEnd="0dp"
                        android:text="@string/trenutno_ulaznica"
                        android:textColor="@color/grayReservation"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/ulazniceReservation"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:paddingStart="10dp"
                        android:paddingEnd="0dp"
                        android:text="@string/ulaznice"
                        android:textColor="#FFFFFF"
                        android:textSize="15sp" />

                </LinearLayout>

                <View
                    android:id="@+id/view17"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="10dp"
                    android:background="#706B6B"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingLeft="10dp"
                    android:paddingTop="20dp"
                    android:paddingRight="10dp">

                    <TextView
                        android:id="@+id/textView83"
                        android:layout_width="20dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:paddingStart="10dp"
                        android:paddingEnd="0dp"
                        android:text="@string/dvorana_kazalista"
                        android:textColor="@color/grayReservation"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/dvoranaReservation"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:paddingStart="10dp"
                        android:paddingEnd="0dp"
                        android:text="@string/dvorana"
                        android:textColor="#FFFFFF"
                        android:textSize="15sp" />

                </LinearLayout>

                <View
                    android:id="@+id/view18"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="10dp"
                    android:background="#706B6B"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingLeft="10dp"
                    android:paddingTop="20dp"
                    android:paddingRight="10dp">

                    <TextView
                        android:id="@+id/textView84"
                        android:layout_width="40dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:paddingStart="10dp"
                        android:paddingEnd="0dp"
                        android:text="@string/premijera"
                        android:textColor="@color/grayReservation"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/premijeraReservation"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:paddingStart="10dp"
                        android:paddingEnd="0dp"
                        android:text="@string/premijera_detalji"
                        android:textColor="#FFFFFF"
                        android:textSize="15sp" />

                    <Switch
                        android:id="@+id/switchPremijeraReservation"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.3"
                        android:textColor="#FFFFFF"
                        android:visibility="gone" />

                </LinearLayout>

                <View
                    android:id="@+id/view19"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="10dp"
                    android:background="#706B6B"/>

                <RelativeLayout
                    android:id="@+id/relativeUpdate"
                    android:layout_width="200dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/bg_update"
                    android:visibility="gone">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginStart="3dp"
                        android:layout_marginTop="3dp"
                        android:layout_marginEnd="3dp"
                        android:layout_marginBottom="3dp"
                        android:contentDescription="@null"
                        android:src="@drawable/bg_update"
                        android:tint="#FFFFFF" />

                    <RelativeLayout
                        android:layout_width="65dp"
                        android:layout_height="40dp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="6dp"
                        android:background="@drawable/bg_update">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:contentDescription="@null"
                            android:padding="10dp"
                            android:src="@drawable/ic_update_black_24dp"
                            android:tint="#FFFFFF" />
                    </RelativeLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="65dp"
                        android:gravity="center"
                        android:text="@string/update_detalji"
                        android:textAllCaps="true"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingLeft="10dp"
                    android:paddingTop="30dp"
                    android:paddingRight="10dp">

                    <TextView
                        android:id="@+id/textView74"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/administratorski_podaci"
                        android:textAllCaps="true"
                        android:textColor="#FFFFFF"
                        android:textSize="15sp" />

                </LinearLayout>

                <View
                    android:id="@+id/view20"
                    android:layout_width="match_parent"
                    android:layout_height="3dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="10dp"
                    android:background="#706B6B"/>

                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/fabAdminAdd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="10dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:src="@drawable/ic_add_circle_outline_black_24dp" />

                <LinearLayout
                    android:id="@+id/relativeAdmin"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingLeft="10dp"
                        android:paddingTop="20dp"
                        android:paddingRight="10dp">

                        <TextView
                            android:id="@+id/textView85"
                            android:layout_width="40dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.5"
                            android:paddingStart="10dp"
                            android:paddingEnd="0dp"
                            android:text="@string/sifra_administratora"
                            android:textColor="#616060"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/idReservation"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.5"
                            android:text="@string/naslov"
                            android:textColor="#FFFFFF"
                            android:textSize="15sp" />

                    </LinearLayout>

                    <View
                        android:id="@+id/view24"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_weight="0.5"
                        android:background="#706B6B"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingLeft="10dp"
                        android:paddingTop="20dp"
                        android:paddingRight="10dp">

                        <TextView
                            android:id="@+id/textView86"
                            android:layout_width="40dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.5"
                            android:paddingStart="10dp"
                            android:paddingEnd="0dp"
                            android:text="@string/ime_prezime"
                            android:textColor="#616060"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/imeReservation"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.5"
                            android:text="@string/naslov"
                            android:textColor="#FFFFFF"
                            android:textSize="15sp" />

                    </LinearLayout>

                    <View
                        android:id="@+id/view21"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_weight="0.5"
                        android:background="#706B6B"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingLeft="10dp"
                        android:paddingTop="20dp"
                        android:paddingRight="10dp">

                        <TextView
                            android:id="@+id/textView87"
                            android:layout_width="40dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.5"
                            android:paddingStart="10dp"
                            android:paddingEnd="0dp"
                            android:text="@string/email_profil"
                            android:textColor="#616060"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/emailReservation"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.5"
                            android:text="@string/naslov"
                            android:textColor="#FFFFFF"
                            android:textSize="15sp" />

                    </LinearLayout>

                    <View
                        android:id="@+id/view22"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_weight="0.5"
                        android:background="#706B6B"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingLeft="10dp"
                        android:paddingTop="20dp"
                        android:paddingRight="10dp">

                        <TextView
                            android:id="@+id/textView88"
                            android:layout_width="40dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.5"
                            android:paddingStart="10dp"
                            android:paddingEnd="0dp"
                            android:text="@string/broj_telefona_profil"
                            android:textColor="#616060"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/brojReservation"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.5"
                            android:text="@string/naslov"
                            android:textColor="#FFFFFF"
                            android:textSize="15sp" />

                    </LinearLayout>

                    <View
                        android:id="@+id/view23"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_weight="0.5"
                        android:background="#706B6B"
                        android:paddingBottom="20dp"/>

                    <com.google.android.material.floatingactionbutton.FloatingActionButton
                        android:id="@+id/fabAdminMinus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="20dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:scaleType="fitXY"
                        android:src="@drawable/ic_indeterminate_check_box_black_24dp"
                        app:backgroundTint="#8A8888" />

                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </androidx.cardview.widget.CardView>
</FrameLayout>
